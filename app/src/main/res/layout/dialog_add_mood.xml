<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you feeling?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <!-- Mood Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First Row: Happy and Excited -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Happy Button -->
            <Button
                android:id="@+id/mood_happy"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="ðŸ˜Š\nHappy"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/mood_card_selector"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:padding="8dp" />

            <!-- Excited Button -->
            <Button
                android:id="@+id/mood_excited"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="ðŸ¤©\nExcited"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/mood_card_selector"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Second Row: Neutral and Sad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Neutral Button -->
            <Button
                android:id="@+id/mood_neutral"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="ðŸ˜\nNeutral"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/mood_card_selector"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:padding="8dp" />

            <!-- Sad Button -->
            <Button
                android:id="@+id/mood_sad"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="ðŸ˜¢\nSad"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/mood_card_selector"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Third Row: Angry (centered) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Angry Button -->
            <Button
                android:id="@+id/mood_angry"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="ðŸ˜ \nAngry"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/mood_card_selector"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Note Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a note (optional)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/mood_note_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="How are you feeling today?"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:background="@drawable/input_background"
        android:padding="12dp"
        android:textSize="14sp" />

</LinearLayout>
