<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HydrationSettingsActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/mood_header_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/icon_button_background"
            android:contentDescription="Back"
            app:tint="@color/primary_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Hydration Settings"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left Column - Settings -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Daily Goal Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon -->
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/professional_icon_background"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_water_drop"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily Goal"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Set your daily water intake target"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <!-- Input -->
                        <EditText
                            android:id="@+id/daily_goal_edit"
                            android:layout_width="80dp"
                            android:layout_height="36dp"
                            android:background="@drawable/professional_input_background"
                            android:gravity="center"
                            android:hint="8"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="glasses"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Reminders Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <!-- Icon -->
                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/professional_icon_background"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_notification"
                                    app:tint="@color/white" />

                            </LinearLayout>

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reminders"
                                    android:textColor="@color/text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Enable hydration reminders"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                            <!-- Toggle -->
                            <Switch
                                android:id="@+id/enable_reminders_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />

                        </LinearLayout>

                        <!-- Sound Settings -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="56dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notification Sound"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <!-- Selected Sound Text -->
                            <TextView
                                android:id="@+id/selected_sound_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Default"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp"
                                android:visibility="gone" />

                            <!-- Sound Buttons Grid -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <!-- Row 1 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="8dp">

                                    <Button
                                        android:id="@+id/sound_default_btn"
                                        android:layout_width="0dp"
                                        android:layout_height="32dp"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="4dp"
                                        android:text="Default"
                                        android:textSize="10sp"
                                        android:background="@drawable/sound_button_background" />

                                    <Button
                                        android:id="@+id/sound_chime_btn"
                                        android:layout_width="0dp"
                                        android:layout_height="32dp"
                                        android:layout_weight="1"
                                        android:layout_marginHorizontal="4dp"
                                        android:text="Soft Chime"
                                        android:textSize="10sp"
                                        android:background="@drawable/sound_button_background" />

                                    <Button
                                        android:id="@+id/sound_bell_btn"
                                        android:layout_width="0dp"
                                        android:layout_height="32dp"
                                        android:layout_weight="1"
                                        android:layout_marginStart="4dp"
                                        android:text="Gentle Bell"
                                        android:textSize="10sp"
                                        android:background="@drawable/sound_button_background" />

                                </LinearLayout>

                                <!-- Row 2 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="8dp">

                                    <Button
                                        android:id="@+id/sound_water_btn"
                                        android:layout_width="0dp"
                                        android:layout_height="32dp"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="4dp"
                                        android:text="Water Drop"
                                        android:textSize="10sp"
                                        android:background="@drawable/sound_button_background" />

                                    <Button
                                        android:id="@+id/sound_classic_btn"
                                        android:layout_width="0dp"
                                        android:layout_height="32dp"
                                        android:layout_weight="1"
                                        android:layout_marginHorizontal="4dp"
                                        android:text="Classic Bell"
                                        android:textSize="10sp"
                                        android:background="@drawable/sound_button_background" />

                                    <Button
                                        android:id="@+id/sound_digital_btn"
                                        android:layout_width="0dp"
                                        android:layout_height="32dp"
                                        android:layout_weight="1"
                                        android:layout_marginStart="4dp"
                                        android:text="Digital Chime"
                                        android:textSize="10sp"
                                        android:background="@drawable/sound_button_background" />

                                </LinearLayout>

                                <!-- Row 3 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/sound_none_btn"
                                        android:layout_width="0dp"
                                        android:layout_height="32dp"
                                        android:layout_weight="1"
                                        android:text="None"
                                        android:textSize="10sp"
                                        android:background="@drawable/sound_button_background" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Sound Settings Layout -->
                        <LinearLayout
                            android:id="@+id/sound_settings_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sound Settings"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <!-- Right Column - Schedule -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Scheduled Reminders Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <!-- Icon -->
                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/professional_icon_background"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_clock"
                                    app:tint="@color/white" />

                            </LinearLayout>

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Scheduled Reminders"
                                    android:textColor="@color/text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Set specific reminder times"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                            <!-- Add Button -->
                            <Button
                                android:id="@+id/add_time_button"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:text="+"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:background="@drawable/professional_icon_background"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <!-- Reminders List Layout -->
                        <LinearLayout
                            android:id="@+id/reminders_list_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp" />

                        <!-- Schedule Fragment Container -->
                        <FrameLayout
                            android:id="@+id/schedule_fragment_container"
                            android:layout_width="match_parent"
                            android:layout_height="300dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
